<div class="features-section side-pads">
    <div class="container">
        <div class="features-container">
            {% for block in section.blocks %}
            <div class="feature-container">
                <div class="feature-card">
                        <div class="feature-card__img">
                            {{ block.settings.feature-img | img_url: 'medium' | img_tag}}
                        </div> 
                        <div class="feature-card__info">                      
                            <div class="feature-card__title">
                                <span>{{ block.settings.feature-title }}</span>
                            </div>
                            <a href="{{ block.settings.feature-link }}" class="feature-card__link">{{ block.settings.feature-link-text }}</a>
                        </div>
                </div>                   
            </div>
            {% unless forloop.index == 4 %}
            <svg style="color: lightgray" width="2" height="107" viewBox="0 0 2 107" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1.27325 1L1.27326 106" stroke="#F5F5F5" stroke-linecap="round"/>
            </svg>
            {% endunless %}             
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
{
  "name": "Features",
  "tag": "section",
  "class": "spaced-section features-section-wrapper",
  "max_blocks": 4,
  "settings": [ 
  ],
  "blocks": [
    {
      "type": "feature-card",
      "name": "feature-card",
      "settings": [
        {
          "type": "header",
          "content": "Feature"
        },
        {
            "id": "feature-img",
            "type": "image_picker",            
            "label": "Feature img"
        },  
        {
            "id": "feature-title",
            "type": "text",
            "label": "Feature title"
        },            
        {
          "id": "feature-link",
          "type": "url",
       	  "label": "Feature link"
        },
        {
            "id": "feature-link-text",
            "type": "text",
            "label": "Link text"
        }
      ]
    }
  ],  
  "presets": [
    {
      "name": "Features"
    }
  ]
}
{% endschema %}